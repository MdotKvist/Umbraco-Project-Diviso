@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@{
	Layout = null;
	
	@* Saves pagename to variable: CurrentPage *@
	var currentPage = Model.Name;
}

<!DOCTYPE html>
<html lang="da">
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link href="/css/Main.css" rel="stylesheet">
    <meta charset="UTF-8">
    @* Tab Title, Uses variable currentPage to display Current Page Name *@
    <title>Diviso: @currentPage</title>
</head>
<body>
 
 
 @* Header *@
<header>
    
    @* Header Logo *@
    <div class="Logo">
        <img src="https://localhost:44327/media/ntmfcjwn/logo.png" />
    </div>
    
    @* Navigation Line *@
    <div class="navline">
        @* Get Navigation from Partial Views *@
        @await Html.PartialAsync("Navigation")
    </div>

</header>

@* Body Content *@
@RenderBody()

@* Footer *@ 
<footer>
    
    <div class="container">
        <div class="row align-items-start">
          @* First collumn with Information *@
        <div class="col">
            <div class="footer-text">
            <h4>Diviso ApS</h4>
            <p>Agerlandsvej 10</p>
            <p>8800 Viborg</p>
            <p>+45 87 25 00 87</p>
            </div>
        </div>
    
    <div class="col">
        @* Second collumn, Left empty to make design easier  *@
    </div>
    
    @* Third collumn With Logo *@
    <div class="col footer-logo-container">
      <img class="footer-logo" src="https://localhost:44327/media/3npbzz0k/footerlogo.png" />
    </div>
    
</footer>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js" integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous"></script>
</body>
</html>




